<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/search_view1"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#F2F7FD"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_height="20dp"
            android:layout_width="20dp"
            android:id="@+id/dishImage_searchView"
            android:src="@drawable/dish_searchview"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/dishTitle_searchView"
            android:textColor="#171B21"
            android:text="Kadhai paneer"
            android:fontFamily="@font/inter_medium"
            android:textSize="14sp"
            android:textFontWeight="400"
            android:lineHeight="20sp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>